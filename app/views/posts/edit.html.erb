<h1>Edit this post</h1>

<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    
      <%= error %>

  <% end %>
<% end %>
<%= form_for @post do |post| %>

<p>
  <%= post.label :title %>
  <%= post.text_field :title%>
</p>
<p>
  <%= post.label :body %>
  <%= post.text_area :body%>
</p>

<p>
  <%= post.label :category %>
  <%= post.text_field :category %>
</p>


<%= post.submit %>

<% end %>

<%= link_to "Home", authors_path %>

<%= link_to "Delete", author_path(@author), method: "delete", data: { confirm: "Are you sure you want to remove this post?"} %>