<h1>Edit this author's info</h1>

<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |error| %>
    
      <%= error %>

  <% end %>
<% end %>
<%= form_for @author do |author| %>

<p>
  <%= author.label :first_name %>
  <%= author.text_field :first_name%>
    <%= author.label :last_name %>
  <%= author.text_field :last_name%>
    <%= author.label :age %>
  <%= author.text_field :age %>
</p>


<%= author.submit %>

<% end %>

<%= link_to "Home", authors_path %>

<%= link_to "Delete", author_path(@author), method: "delete", data: { confirm: "Are you sure you want to remove this author?"} %>